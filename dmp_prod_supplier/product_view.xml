<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
<!-- Product supplier name in form  -->	
		<record id="product_normal_form_view_supplier" model="ir.ui.view">
            <field name="name">product_normal_form_view_supplier</field>
            <field name="model">product.product</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
	            <!-- customer -->
	            <field name="seller_ids" position="before">
	            	<group name="main_supplier" col="4">
		            	<field name="seller_id"/>
		            	<field name="seller_product_name"/>
	            	</group>
	            </field>
            </field>
		</record>
			
<!-- Product supplier name in tree  -->
		<record id="product_product_tree_view_supplier" model="ir.ui.view">
            <field name="name">product_product_tree_view_supplier</field>
            <field name="model">product.product</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
	            <!-- supplier -->
	            <field name="name" position="after">
	            	<field name="seller_product_name"/>           	
	            </field> 	            
            </field>
		</record>
<!-- Product customer name in search  -->		   
        <record id="product_search_form_view_supplier" model="ir.ui.view">
            <field name="name">product_search_form_view_supplier</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_search_form_view"/>
            <field name="arch" type="xml">
            	<field name="name" position="after">
            		<field name="seller_product_name"/>
            	</field>
            </field>
        </record>


<!--  add supplier product name and code to the supplier product info tree list -->	
        <record model="ir.ui.view" id="product_supplierinfo_tree_view_ext">
            <field name="name">product_supplierinfo_tree_view_ext</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
            <field name="arch" type="xml">
            	<field name="name" position="after">
                    <field name="product_code"/>
            		<field name="product_name"/>
            	</field>
            </field>		
		</record>     
	</data>	        	
</openerp>	
