<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>  
<!-- ***Sales Products Menu*** -->              
<!-- Change action name from 'Product Variants' to 'Products'  -->
        <record id="product.product_normal_action_sell" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="type">ir.actions.act_window</field>
        </record>
        
<!-- remove groups="base.group_no_one" for the menu under sales/products-->                   
	    <record id="product.menu_products" model="ir.ui.menu">
	        <field name="groups_id" eval="[(6, 0, [ref('base.group_user')])]"/>  
	    </record>
        
<!-- hide the original 'Products' menu that list product.template -->
	    <record id="product.menu_product_template_action" model="ir.ui.menu">
	        <field name="groups_id" eval="[(6, 0, [ref('dm_base.group_hide')])]"/>  
	    </record>
	    
<!-- ***Purchase Products Menu*** -->	    
<!-- menu purchase/products/products, change to show product.product -->       
        <record id="product_action_purchase" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_type">form</field>
            <field name="context">{"search_default_filter_to_purchase":1}</field>
            <field name="view_id" ref="product.product_product_tree_view"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to define a new product.
              </p><p>
                You must define a product for everything you sell, whether it's
                a physical product, a consumable or a service you offer to
                customers.
              </p><p>
                The product form contains information to simplify the sale
                process: price, notes in the quotation, accounting data,
                procurement methods, etc.
              </p>
            </field>
        </record>
		<menuitem name="Products" id="purchase.menu_procurement_partner_contact_form" action="product_action_purchase"
		    parent="purchase.menu_procurement_management_product" sequence="1"/>        
        
    </data>
</openerp>
