<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="stock_partial_picking_form_avaiable_check" model="ir.ui.view">
            <field name="name">stock_partial_picking_form_avaiable_check</field>
            <field name="model">stock.partial.picking</field>
            <field name="inherit_id" ref="stock.stock_partial_picking_form"/>
            <field name="arch" type="xml">
            	<field name="quantity" position="after">
            		<field name="state" invisible="1"/>
                    <field name="pick_type" invisible="1"/>
                    <!-- <field name="quantity_max" attrs="{'invisible':[('pick_type','not in',('internal','out'))]}"/> -->
                    <field name="quantity_max" invisible="1"/>
                    <!-- attrs is not useful for tree -->
                    <field name="quantity_out_available" attrs="{'invisible':[('pick_type','not in',('internal','out'))]}"/>
            	</field>
            	<xpath expr="//tree" position="attributes">
            		<attribute name="fonts">bold:state != 'assigned'</attribute>
            		<attribute name="colors">red:state != 'assigned'</attribute>
            	</xpath>
            </field>
        </record>
		
        <record id="dmp_view_picking_out_form_partial_deliver" model="ir.ui.view">
            <field name="name">dmp_view_picking_out_form_partial_deliver</field>
            <field name="model">stock.picking.out</field>
            <field name="inherit_id" ref="stock.view_picking_out_form"/>	
            <field name="arch" type="xml">       	
                <xpath expr="//button[@name='action_process']" position="before">
                	<button name="action_process" states="confirmed" string="Partial Deliver" type="object" class="oe_highlight"/>
                </xpath>                			                        	
        	</field>        
		</record>    
    </data>
</openerp>
