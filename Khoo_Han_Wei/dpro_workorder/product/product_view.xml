<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <menuitem id="menu_dpro_contract" name="Contracts/Recurring" parent="menu_service" sequence="1"/>

        <record id="action_dpro_smerp_product" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_type">form</field>
            <field name="context">{"search_default_filter_to_sell":1}</field>
            <field name="search_view_id" ref="product.product_search_form_view"/>
        </record>
        <record id="action_dpro_smerp_product_view1" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="product.product_kanban_view"/>
            <field name="act_window_id" ref="action_dpro_smerp_product"/>
        </record>
        <record id="action_dpro_smerp_product_view2" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="product.product_product_tree_view"/>
            <field name="act_window_id" ref="action_dpro_smerp_product"/>
        </record>
        <record id="action_dpro_smerp_product_view3" model="ir.actions.act_window.view">
            <field name="sequence" eval="3"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="product.product_normal_form_view"/>
            <field name="act_window_id" ref="action_dpro_smerp_product"/>
        </record>

        <menuitem id="menu_dpro_products" parent="menu_dpro_contract" sequence="1"
                    action="action_dpro_smerp_product"/>

        <record id="acespritech_product_normal_form_view" model="ir.ui.view">
            <field name="name">acespritech.product.normal.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="default_code" position="after">
                    <field name="bt_part_number"/>
                </field>
            </field>
        </record>
        <menuitem
            action="product.product_category_action"
            id="menu_products_category"
            parent="menu_dpro_contract"
            sequence="1" groups="base.group_no_one"/>
    </data>
</openerp>