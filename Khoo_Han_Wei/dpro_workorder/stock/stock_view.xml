<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="prod_lot_modification_tree" model="ir.ui.view">
            <field name="name">prod.lot.modification.tree</field>
            <field name="model">prod.lot.modification</field>
            <field name="arch" type="xml">
                <tree string="Modification">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="user_id"/>
                </tree>
            </field>
        </record>

        <record id="prod_lot_modification_form" model="ir.ui.view">
            <field name="name">prod.lot.modification.form</field>
            <field name="model">prod.lot.modification</field>
            <field name="arch" type="xml">
                <form string="Modification">
                    <group col="4" colspan="4">
                        <field name="name"/>
                        <field name="date"/>
                        <field name="user_id"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="acespritech_view_production_lot_form" model="ir.ui.view">
            <field name="name">acespritech.stock.production.lot.form</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <field name="ref" position="after">
                    <field name="warranty_id"/>
                </field>
                <notebook position="inside">
                    <page string="Modifications">
                        <field name="modify_ids" nolabel="1" colspan="4"/>
                    </page>
                </notebook>
            </field>
        </record>

    </data>
</openerp>