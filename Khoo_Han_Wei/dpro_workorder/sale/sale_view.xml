<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="dpro_sale_view_inherit123">
            <field name="name">acespritech.sale.order.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_crm.sale_view_inherit123"/>
            <field name="arch" type="xml">
                <field name="section_id" position="replace"/>
                <field name="project_id" position="after">
                    <field name="work_type"/>
                    <field name="acc_distance"/>
                    <field name="acc_time"/>
                    <field name="relevancy"/>      
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="acespritech_view_order_form">
            <field name="name">acespritech.work.orders.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/form[@string='Sales Order Lines']/field[@name='name']" position="after">
                    <group>
                        <field name="prodlot_id" domain="[('product_id','=',product_id)]"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree[@string='Sales Order Lines']/field[@name='name']" position="after">
                    <field name="available_qty"/>
                    <field name="prodlot_id"/>
                </xpath>
                <button name="action_button_confirm" states="draft" position="replace">
                    <button name="action_button_confirm" states="draft" string="Confirm Work Order" 
                            type="object" groups="base.group_user"/>
                </button>
                <button name="action_button_confirm" states="sent" position="replace">
                    <button name="action_button_confirm" states="sent" string="Confirm Work Order" class="oe_highlight" 
                            type="object" groups="base.group_user"/>
                </button>
                <field name="partner_shipping_id" position="after">
                    <group col="2" colspan="2">
                        <button name="open_map" string="Google Map" type="object" icon="gtk-zoom-in"/>
                    </group>
                </field>
                <xpath expr="/form/sheet/h1" position="replace">
                    <h1>
                        <label string="Work Order"/>
                        <field name="name" class="oe_inline" readonly="1"/>
                    </h1>
                </xpath>
                <field name="partner_shipping_id" position="replace">
                    <field name="partner_shipping_id" context="{'default_type':'delivery'}" string="Site Address"/>
                </field>
                <field name="client_order_ref" position="after">
                    <field name="opportunity_subject"/>
                    <field name="date_in" on_change="onchange_datein_sla(date_in,sla_id)"/>
                    <field name="date_due"/>
                    <field name="date_closed"/>
                    <field name="sla_id" on_change="onchange_datein_sla(date_in,sla_id)"/>
                    <field name="status_id"/>
                </field>
                <xpath expr="//page[@string='Order Lines']" position="before">
                    <page string="Work Request">
                        <group col="4" colspan="4">
                            <field name="wr_code_id" required="1"/>
                            <field name="problem_code_id"/>
                        </group>
                        <group col="4" colspan="4">
                            <field name="work_requested" colspan="4"/>
                        </group>
                        <group col="4" colspan="4">
                            <field name="mod_test_id"/>
                            <field name="rev_test"/>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//page[@string='Other Information']" position="before">
                    <page string="Work Description" attrs="{'invisible': [('status_id','in',['Pending','Confirmed'])]}">
                        <group col="4" colspan="4">
                            <field name="action_code_id" colspan="4"/>
                            <field name="maintain_reason" colspan="4"/>
                            <field name="action_taken" colspan="4"/>
                            <field name="comment" colspan="4"/>
                            <field name="defect" colspan="4"/>
                        </group>
                        <group col="4" colspan="4">
                            <field name="mode_test_result_id"/>
                            <field name="rev_test_result"/>
                        </group>
                    </page>
                    <page string="Part Replaced" attrs="{'invisible': [('status_id','in',['Pending','Confirmed'])]}">
                        <field name="part_replace_ids" nolabel="1" colspan="4">
                            <tree string="Part Replaced" editable="bottom">
                                <field name="product_id" on_change="onchange_product_id( product_id, context)"/>
                                <field name="name"/>
                                <field name="serial_id"/>
                                <field name="quantity"/>
                                <field name="product_uom"/>
                            </tree>
                            <form string="Part Replaced">
                                <group col="4" colspan="4">
	                                <field name="product_id" on_change="onchange_product_id( product_id, context)"/>
	                                <field name="name"/>
	                                <field name="serial_id"/>
	                                <field name="quantity"/>
	                                <field name="product_uom"/>
                                </group>
                            </form>
                        </field>
                    </page>                    
                    <page string="Schedule Task" attrs="{'invisible': [('status_id','in',['Pending','Confirmed'])]}">
                        <button name="%(action_wizard_create_task)d" string="Create Task" class="oe_highlight" 
                                type="action"/>
                        <field name="task_ids" nolabel="1" colspan="4" context="{'analytic_account_id': project_id}"/>
                    </page>
                    <page string="Time" attrs="{'invisible': [('status_id','in',['Pending','Confirmed'])]}">
                        <field name="task_work_ids" nolabel="1" colspan="4" readonly="1">
                            <tree string="Task Work">
                                <field name="name"/>
                                <field name="hours" widget="float_time" sum="Spent Hours"/>
                                <field name="date"/>
                                <!-- <field name="user_id"/> -->
                            </tree>
                        </field>
                    </page>
                    <page string="Quality Control" attrs="{'invisible': [('status_id','not in',['QA','Completed','Closed'])]}">
                        <field name="qc_ids" nolabel="1" colspan="4"/>
                    </page>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="sale.view_order_tree">
            <field name="name">acespritech.work.orders.tree</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <tree string="Work Orders">
                    <field name="name"/>
                    <field name="date_in"/>
                    <field name="date_due"/>
                    <field name="partner_id"/>
                    <field name="status_id"/>
                    <field name="user_id"/>
                    <field name="state" invisible="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_order_kanban">
            <field name="name">sale.order.kanban</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <kanban default_group_by="status_id" >
                    <field name="color"/>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="project_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                                <div class="oe_dropdown_toggle oe_dropdown_kanban">
                                    <span class="oe_e">Ã­</span>
                                    <ul class="oe_dropdown_menu">
                                        <t t-if="widget.view.is_action_enabled('edit')"><li><a type="edit">Edit...</a></li></t>
                                        <t t-if="widget.view.is_action_enabled('delete')"><li><a type="delete">Delete</a></li></t>
                                        <li><ul class="oe_kanban_colorpicker" data-field="color"/></li>
                                    </ul>
                                </div>
                                <div class="oe_kanban_content">
                                    <div><b><field name="name"/></b></div>
                                    <div><field name="partner_id"/></div>
                                    <div>Contract:<field name="project_id"/></div>
                                    <div class="oe_clear"></div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="dpro_view_sales_order_filter">
            <field name="name">dpro_view_sales_order_filter</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
            	<xpath expr="//filter[@string='Salesperson']" position='attributes'>
            		<attribute name="string">Announcer</attribute>
            	</xpath>
            </field>
        </record>
        
        <record id="action_work_orders_draft" model="ir.actions.act_window">
            <field name="name">Work Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar,graph</field>
            <field name="search_view_id" ref="sale.view_sales_order_filter"/>
            <field name="domain">[('state','in',['draft'])]</field>
        </record>
