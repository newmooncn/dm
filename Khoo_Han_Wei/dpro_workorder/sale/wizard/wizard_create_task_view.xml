<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_wizard_create_task_form" model="ir.ui.view">
            <field name="name">wizard.create.task.form</field>
            <field name="model">wizard.create.task</field>
            <field name="arch" type="xml">
                <form string="Create Task" version="7.0">
                    <group col="4" colspan="4">
                        <field name="name" required="1"/>
                        <field name="date_deadline"/>
                        <field name="user_id"/>
                    </group>
                    <group col="4" colspan="4">
                        <field name="description" nolabel="1" placeholder="Add a Description..."/>
                    </group>
                    <footer>
                        <button name="action_create" string="Create" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_create_task" model="ir.actions.act_window">
            <field name="name">Create Task</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.create.task</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</openerp>