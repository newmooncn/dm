<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <menuitem id="menu_service" name="Service" />
        <menuitem id="menu_dpro_config" name="Configuration" parent="menu_service" sequence="2"/>
        <menuitem id="menu_child_service" name="Service" parent="menu_service" sequence="0"/>

        <record id="action_dpro_project" model="ir.actions.act_window">
            <field name="name">Projects</field>
            <field name="res_model">project.project</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="view_mode">kanban,tree,form,gantt</field>
            <field name="view_id" ref="project.view_project_kanban"/>
            <field name="search_view_id" ref="project.view_project_project_filter"/>
            <field name="context">{'search_default_Current': 1}</field>
        </record>

        <menuitem id="menu_dpro_project" action="action_dpro_project" name="Projects"  sequence="10"
                    parent="menu_child_service"/>

        <!-- Warranty -->

        <record id="view_base_warranty_tree" model="ir.ui.view">
            <field name="name">base.warranty.tree</field>
            <field name="model">base.warranty</field>
            <field name="arch" type="xml">
                <tree string="Warranty">
                    <field name="warranty_id"/>
                    <field name="name"/>
                    <field name="warranty_start"/>
                    <field name="warranty_period"/>
                </tree>
            </field>
        </record>

        <record id="view_base_warranty_form" model="ir.ui.view">
            <field name="name">base.warranty.form</field>
            <field name="model">base.warranty</field>
            <field name="arch" type="xml">
                <form string="Warranty" version="7.0">
                    <group col="4" colspan="4">
                        <field name="warranty_id"/>
                        <field name="name"/>
                        <field name="warranty_start"/>
                        <field name="warranty_period"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_base_warranty" model="ir.actions.act_window">
            <field name="name">Warranty</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">base.warranty</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="action_base_warranty" id="menu_base_warranty" sequence="5"
                 parent="menu_dpro_config"/>

        <!-- Work Request Code -->

        <record id="view_work_request_code_tree" model="ir.ui.view">
            <field name="name">work.request.code.tree</field>
            <field name="model">work.request.code</field>
            <field name="arch" type="xml">
                <tree string="Work Request Code">
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_work_request_code_form" model="ir.ui.view">
            <field name="name">work.request.code.form</field>
            <field name="model">work.request.code</field>
            <field name="arch" type="xml">
                <form string="Work Request Code">
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_work_request_code" model="ir.actions.act_window">
            <field name="name">Work Request Code</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">work.request.code</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="action_work_request_code" id="menu_work_request_code" sequence="6"
                 parent="menu_dpro_config"/>

        <!-- Problem Code -->

        <record id="view_base_problem_code_tree" model="ir.ui.view">
            <field name="name">base.problem.code.tree</field>
            <field name="model">base.problem.code</field>
            <field name="arch" type="xml">
                <tree string="Problem Code">
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_base_problem_code_form" model="ir.ui.view">
            <field name="name">base.problem.code.form</field>
            <field name="model">base.problem.code</field>
            <field name="arch" type="xml">
                <form string="Problem Code">
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_base_problem_code" model="ir.actions.act_window">
            <field name="name">Problem Code</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">base.problem.code</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="action_base_problem_code" id="menu_base_problem_code" sequence="3"
                 parent="menu_dpro_config"/>

        <!-- Action Code -->

        <record id="view_base_action_code_tree" model="ir.ui.view">
            <field name="name">base.action.code.tree</field>
            <field name="model">base.action.code</field>
            <field name="arch" type="xml">
                <tree string="Action Code">
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_base_action_code_form" model="ir.ui.view">
            <field name="name">base.action.code.form</field>
            <field name="model">base.action.code</field>
            <field name="arch" type="xml">
                <form string="Action Code">
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_base_action_code" model="ir.actions.act_window">
            <field name="name">Action Code</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">base.action.code</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="action_base_action_code" id="menu_base_action_code" sequence="1"
                 parent="menu_dpro_config"/>

        <!-- Service Level Agreement -->

        <record id="view_base_sla_tree" model="ir.ui.view">
            <field name="name">base.sla.tree</field>
            <field name="model">base.sla</field>
            <field name="arch" type="xml">
                <tree string="Service Level Agreement">
                    <field name="name"/>
                    <field name="due_date_opt"/>
                </tree>
            </field>
        </record>

        <record id="view_base_sla_form" model="ir.ui.view">
            <field name="name">base.sla.form</field>
            <field name="model">base.sla</field>
            <field name="arch" type="xml">
                <form string="Service Level Agreement" version="7.0">
                    <group col="4" colspan="4">
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                    <label for="description" colspan="4"/>
                    <group col="4" colspan="4">
                        <field name="description" nolabel="1"/>
                    </group>
                    <group col="2" colspan="2">
                        <field name="due_date_opt"/>
                    </group>
                    <group col="2" colspan="2" attrs="{'invisible': [('due_date_opt', 'not in', ['due_day_time'])]}">
                        <field name="due_day"/>
                    </group>
                    <group col="2" colspan="2">
                        <field name="due_hour" on_change="onchange_hour(due_hour)"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_base_sla" model="ir.actions.act_window">
            <field name="name">Service Level Agreement</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">base.sla</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="action_base_sla" id="menu_base_sla" sequence="4"
                 parent="menu_dpro_config"/>

        <!-- Workorder Part Replace -->

        <record id="view_workorder_part_replace_search" model="ir.ui.view">
            <field name="name">workorder.part.replace.search</field>
            <field name="model">workorder.part.replace</field>
            <field name="arch" type="xml">
                <search string="Part Replaced">
                    <field name="workorder_id"/>
                    <field name="product_id"/>
                    <group expand="0" string="Group By...">
                        <filter string="WorkOrder" context="{'group_by': 'workorder_id'}"/>
                        <filter string="Product" context="{'group_by':'product_id'}"/>
                        <filter string="Serial No" context="{'group_by':'serial_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_workorder_part_replace_tree" model="ir.ui.view">
            <field name="name">workorder.part.replace.tree</field>
            <field name="model">workorder.part.replace</field>
            <field name="arch" type="xml">
                <tree string="Part Replaced">
                    <field name="workorder_id"/>
                    <field name="product_id"/>
                    <field name="quantity"/>
                    <field name="serial_id"/>
                </tree>
            </field>
        </record>

        <record id="view_workorder_part_replace_form" model="ir.ui.view">
            <field name="name">workorder.part.replace.form</field>
            <field name="model">workorder.part.replace</field>
            <field name="arch" type="xml">
                <form string="Part Replaced">
                    <group col="4" colspan="4">
                        <field name="workorder_id"/>
                        <field name="product_id"/>
                        <field name="quantity"/>
                        <field name="serial_id"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_workorder_part_replace" model="ir.actions.act_window">
            <field name="name">Replaced Parts</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">workorder.part.replace</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_workorder_part_replace_search"/>
        </record>

        <menuitem action="action_workorder_part_replace" id="menu_workorder_part_replace" sequence="30"
                 parent="menu_child_service"/>

        <!-- Inspection Type -->

        <record id="view_base_inspection_type_tree" model="ir.ui.view">
            <field name="name">base.inspection.type.tree</field>
            <field name="model">base.inspection.type</field>
            <field name="arch" type="xml">
                <tree string="Inspection Type">
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_base_inspection_type_form" model="ir.ui.view">
            <field name="name">base.inspection.type.form</field>
            <field name="model">base.inspection.type</field>
            <field name="arch" type="xml">
                <form string="Inspection Type">
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_base_inspection_type" model="ir.actions.act_window">
            <field name="name">Inspection Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">base.inspection.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="action_base_inspection_type" id="menu_base_inspection_type" sequence="2"
                 parent="menu_dpro_config"/>

        <!-- Work Order Quality Control -->

        <record id="view_workorder_quality_control_tree" model="ir.ui.view">
            <field name="name">workorder.quality.control.tree</field>
            <field name="model">workorder.quality.control</field>
            <field name="arch" type="xml">
                <tree string="Quality Control">
                    <field name="inspect_type_id"/>
                    <field name="remark"/>
                </tree>
            </field>
        </record>

        <record id="view_workorder_quality_control_form" model="ir.ui.view">
            <field name="name">workorder.quality.control.form</field>
            <field name="model">workorder.quality.control</field>
            <field name="arch" type="xml">
                <form string="Quality Control">
                    <group>
                        <field name="inspect_type_id"/>
                    </group>
                    <group col="4" colspan="4">
                        <field name="remark" nolabel="1" placeholder="Add a Remark..."/>
                    </group>
                </form>
            </field>
        </record>
        <!-- Work Type -->

        <record id="view_dpro_work_type_tree" model="ir.ui.view">
            <field name="name">dpro.work.type.tree</field>
            <field name="model">dpro.work.type</field>
            <field name="arch" type="xml">
                <tree string="Work Type">
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_dpro_work_type_form" model="ir.ui.view">
            <field name="name">dpro.work.type.form</field>
            <field name="model">dpro.work.type</field>
            <field name="arch" type="xml">
                <form string="Work Type">
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_dpro_work_type" model="ir.actions.act_window">
            <field name="name">Work Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dpro.work.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="action_dpro_work_type" id="menu_dpro_work_type" sequence="7"
                 parent="menu_dpro_config"/>
    </data>
</openerp>