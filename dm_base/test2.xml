
<header>
	<pageTemplate>
		<frame id="first" x1="1.3cm" y1="3.0cm" height="24.9cm" width="19.0cm" />
		<stylesheet>
			<!-- Set here the default font to use for all <para> tags -->
			<paraStyle name='Normal' fontName="MicrosoftYaHei" />
			<paraStyle name="main_footer" fontSize="8.0" alignment="CENTER" />
			
			<paraStyle name="main_header" fontSize="8.0" leading="10" alignment="CENTER" spaceBefore="0.0" spaceAfter="0.0" />
			<paraStyle name="main_title" fontSize="18.0" alignment="CENTER"/>
		</stylesheet>
		<pageGraphics>
			<!-- Set here the default font to use for all <drawString> tags -->
			<setFont name="MicrosoftYaHei" size="8" />
			<!-- You Logo - Change X,Y,Width and Height -->
			<image x="1.3cm" y="27.7cm" height="60.0">[[ company.logo or removeParentNode('image') ]]</image>
			<fill color="black" />

			<!-- page header -->
			<stroke color="#333399"/>
			<lineMode width="2" />
			<lines>1.3cm 27.9cm 20cm 27.9cm</lines>
			<place x="2.3cm" y="28.9cm" height="0.5cm" width="17.0cm">				
				<para style="main_title"><font color="#333399">[[ company.name ]]</font></para>
			</place>
			<place x="2.3cm" y="27.9cm" height="0.8cm" width="17.0cm">
				<para style="main_header">[[ display_address(company.partner_id) or '' ]]</para>
				<para style="main_header">Email:[[company.email]]. Tel:[[company.phone]]. Fax:[[company.fax]].</para>
			</place>

			<!-- left margin -->
			<rotate degrees="90" />
			<fill color="grey" />
			<drawString x="2.65cm" y="-0.4cm">generated by ACTIN PACIFIC</drawString>
			<fill color="black" />
			<rotate degrees="-90" />

			<!--page bottom -->
			<lines>1.2cm 1.65cm 19.9cm 1.65cm</lines>
			<place x="1.3cm" y="0cm" height="1.55cm" width="19.0cm">
				<!-- <para style="main_footer">[[ company.rml_footer ]]</para> -->
				<para style="main_footer">Contact : [[ user.name ]] - Page:<pageNumber /></para>
			</place>
		</pageGraphics>
	</pageTemplate>
</header>