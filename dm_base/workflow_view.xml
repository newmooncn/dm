<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="metro_view_workflow_instance_form" model="ir.ui.view">
      <field name="name">metro.workflow.instance.form</field>
      <field name="model">workflow.instance</field>
      <field name="inherit_id" ref="base.view_workflow_instance_form"/>
      <field name="arch" type="xml">
        <field name="wkf_id" position="after">
        	<field name="res_name"/>
        </field>
        <xpath expr="//group" position="after">
        	<label for="wkitem_ids"/>
        	<field name="wkitem_ids"/>
        </xpath>
      </field>
    </record>
    <record id="metro_view_workflow_instance_tree" model="ir.ui.view">
      <field name="name">metro.workflow.instance.tree</field>
      <field name="model">workflow.instance</field>
      <field name="inherit_id" ref="base.view_workflow_instance_tree"/>
      <field name="arch" type="xml">
        <field name="wkf_id" position="after">
        	<field name="res_name"/>
        </field>
      </field>
    </record>

  </data>
</openerp>
